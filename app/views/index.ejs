<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head') %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <header>
    <%- include ('./partials/header') %>
  </header>

  <main>

    <div class="container-fluid">
      <div class="card-columns">
        <% notes.forEach(function(note){ %>

        <div class="card" >
          <div class="card-body">
            <h4 class="card-title"> <%= note.title %> </a></h4>
            <p class="card-text"> <%= note.content %></p>
            <a href="/notes/<%= note._id %>" class="card-link">View</a>
            <a href="/notes/edit/<%= note._id %>" class="card-link">Edit</a>
            <a href="/notes/delete/<%= note._id %>" class="card-link">Delete</a>
          </div>
        </div>
        <% }); %>
      </div>


  </main>

  <footer>
    <%- include ('./partials/footer') %>
  </footer>
</body>

</html>